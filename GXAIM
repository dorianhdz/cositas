CreateToggle("ESP SILUETA + DIAMANTE", Config.ESP_Enabled, function(Val) 
    Config.ESP_Enabled = Val 
    -- Refresh manual instantáneo
    for _, v in pairs(Players:GetPlayers()) do
        if v.Character then
            if v.Character:FindFirstChild("MinimalistESP") then v.Character.MinimalistESP.Enabled = Val end
            if v.Character:FindFirstChild("Head") and v.Character.Head:FindFirstChild("DiamondESP") then v.Character.Head.DiamondESP.Enabled = Val end
        end
    end
end)

